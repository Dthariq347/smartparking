<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_box"
    android:padding="8dp"
    tools:context=".Page.ParkingAdapter">

    <!-- Image Lokasi Parkir -->
    <ImageView
        android:id="@+id/parkingImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sampleparkir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="12dp" />

    <!-- Nama Lokasi -->
    <TextView
        android:id="@+id/parkingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Binus Alam Sutera"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/parkingImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"/>

    <!-- Info Motor dan Mobil -->
    <TextView
        android:id="@+id/parkingInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Motor: 362 | Mobil: 20"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/parkingImage"
        app:layout_constraintTop_toBottomOf="@id/parkingName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
