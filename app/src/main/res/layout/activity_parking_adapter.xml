<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#6E8AD1"> <!-- Background biru -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Gambar parkir -->
        <ImageView
            android:id="@+id/parkingImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/sampleparkir"/>

        <!-- Kolom teks -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nama tempat parkir -->
            <TextView
                android:id="@+id/parkingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binus Alam Sutera"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <!-- Info motor -->
            <TextView
                android:id="@+id/parkingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motor : 362"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Opsi lainnya (menu titik tiga) -->
        <ImageView
            android:id="@+id/moreOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/titik3"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
